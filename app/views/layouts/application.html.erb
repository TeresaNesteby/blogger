<!DOCTYPE html>
<html>
<head>
  <title>Blogger</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag 'application', 'http://fonts.googleapis.com/css?family=Railway:400,700' %>
</head>
<body>
  <div id="sidebar">
    <div id="logo">
      <%= link_to root_path do %>
        <%=  image_tag "moose.jpg"%>
      <% end %>
    </div>
    <ul>
      <li class="category">Website</li>
      <li><%= link_to "Blog", root_path %></li>
      <li><%= link_to "About", about_path %></li>

    </ul>

    <ul>
      <li class="category">Social</li>
      <li><a href="https://twitter.com/nestahoneybee">Twitter</a></li>
      <li><a href="https://linkedin.com/in/teresanesteby">LinkedIn</a></li>
      <li><a href="https://github.com/teresanesteby">GitHub</a></li>
      <li><a href="https://instagram.com/nestahoneyb">Instagram</a></li>
      <li><a href="mailto:teresa.nesteby@gmail.com">Email</a></li>

    </ul>
    <% if !user_signed_in? %>
      <p class="sign_in">Admin Login</p>
    <% end %>
  </div>

  <div id="main_content">
    <div id="header">

      <% if current_page?(root_path) %>
        <p>All Posts</p>
      <% elsif current_page?(about_path) %>
        <p>About</p>
      <% else %>
        <%= link_to "Back to All Posts", root_path %>
      <% end %>

      <% if user_signed_in? %>
        <div class="buttons">
          <button class="button">
            <%= link_to "New Post", new_post_path %>
          </button>
          <button class="button">
          Logout
          </button>
        </div>
      <% end %>
    </div>
    <% flash.each do |name, msg| %>
      <%= content_tag(:div, msg, class:"alert") %>
    <% end %>
<%= yield %>
  </div>


</body>
</html>
